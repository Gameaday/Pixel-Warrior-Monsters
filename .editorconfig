# EditorConfig for Pixel Warrior Monsters
# Android/Kotlin project code style configuration
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{kt,kts}]
indent_size = 4
indent_style = space
max_line_length = 140

[*.{gradle,gradle.kts}]
indent_size = 4
indent_style = space

[*.xml]
indent_size = 4
indent_style = space

[*.json]
indent_size = 2
indent_style = space
